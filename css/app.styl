    display: inline-block;
    padding: 10px;
    bottom: 0;
}

.loginTitle {
    font-family: 'Squada One', cursive;
    font-size: 42px;
}

.loginInput {
    background-image: linear-gradient(top, rgba(0, 0, 0, 0.02) 0%, rgba(255, 255, 255, 0.02) 50%);
    border: 1px solid rgba(0, 0, 0, 0.16);
