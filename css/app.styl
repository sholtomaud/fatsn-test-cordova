.map{
    position: fixed !important;
    top:0;
    bottom: 0;
    left: 50px;
    right: 0px;
}

.info {
    padding: 6px 8px;
    font: 14px/16px Arial, Helvetica, sans-serif;
    background: lightGray;
    box-shadow: 0 0 15px rgba(0,0,0,0.2);
    top:6px;
    right:100px;
}

.info h4 {
    margin: 0 0 5px;
    color: #777;
}

.legend {
    line-height: 18px;
    color: #555;
}
.legend i {
    width: 18px;
    height: 18px;
    float: left;
    margin-right: 8px;
    opacity: 0.7;
}


.loginModal, .gpsModal{
